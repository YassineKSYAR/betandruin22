<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseEntered="#onShowBalance" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uicontrollers.DepMoneyController">
   <children>
      <TextField fx:id="depMoneyF" layoutX="225.0" layoutY="187.0" onKeyTyped="#onSetBtn" />
      <Button fx:id="depMoenyBtn" disable="true" layoutX="338.0" layoutY="258.0" mnemonicParsing="false" onAction="#onSetMoeny" prefHeight="32.0" prefWidth="101.0" style="-fx-background-color: black; -fx-background-radius: 20px;" text="Confirm" textFill="#008d9a">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
      <Label alignment="CENTER" layoutX="225.0" layoutY="152.0" prefHeight="18.0" prefWidth="150.0" text="Enter the amount">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="okLabel" alignment="CENTER" prefHeight="50.0" prefWidth="600.0" textFill="GREEN">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
      <Button fx:id="closeBtn" layoutX="189.0" layoutY="258.0" mnemonicParsing="false" onAction="#closeClick" prefHeight="32.0" prefWidth="83.0" style="-fx-background-color: black; -fx-background-radius: 20px;" text="Back" textFill="#008d9a">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
      <Label fx:id="myBalance" alignment="CENTER" layoutX="4.0" layoutY="91.0" prefHeight="32.0" prefWidth="600.0" textFill="#0095eb">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="196.0" layoutY="57.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: black; -fx-background-radius: 20px;" text="My Balance" textFill="#2998d0">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
